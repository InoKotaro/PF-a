<% @posts.each do |post| %>

  <div>
    <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image(100,100) %></p>
    <p>ユーザーネーム：<%= post.user.name %></p>
    <%= link_to post_path(post) do %> <!--画像リンク化-->
      <%= image_tag post.get_image %>
    <% end %>
    <p>タイトル：<%= post.title %></p>
    <p>説明：<%= post.introduction %></p>
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p> <!--コメント数-->

  </div>

<% end %>