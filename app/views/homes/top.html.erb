<div class = "container">
  <div class = "row">

    <div body></div>

    <div class = "search_form">
      <%= render 'public/searches/search', user: @user, posts: @posts, class: "text-center" %>
    </div>

    <div>
      <%= render 'public/posts/post_list', posts: @posts %>
    </div>

  </div> <!--row閉じ-->
</div> <!--container閉じ-->

<!--投稿ボタン-->
<span id = "post_button">
  <%= link_to new_post_path do%>
    <%= image_tag asset_path('post_button.png'), data: {"turbolinks"=>false}, class: "post_button " %>
  <% end %>
</span>

  <!--ページネーション-->
<%= paginate @posts, class: 'center-block'%>