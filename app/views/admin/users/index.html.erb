<div class = "container">
  <div class = "row w-50 mx-auto">

    <h1>管理者専用ページ</h1>


      <table class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= user.name %>
              </td>

              <td>
                <%= user.email %>
              </td>

              <td>
                <!--ユーザーアカウントステータス-->
                <% if user.is_valid %>
                    <strong class="text-secondary">稼働中</strong> <!--使用可能-->
                  <% else %>
                    <strong class="text-success">停止中</strong> <!--使用停止-->
                <% end %>
              </td>

               <td>
                <%= link_to "強制削除", user_withdraw_user_path(user), method: :patch, data: { confirm: "【注意】管理者権限で削除しますか？" } %>

              </td>






    <% end %>
    </table> <!--table範囲終了-->

  </div> <!--row閉じ-->
</div> <!--container閉じ-->


