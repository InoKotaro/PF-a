<!--2行目の「post」部分が元インスタンス変数-->
<% post.comments.each do |comment| %>

    <p><%= image_tag comment.user.get_profile_image(100,100) %></p>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
    <p><%= comment.comment %></p>

    <% if comment.user == current_user %> <!--コメント者とログイン中ユーザーが一致した場合のみ削除ボタン表示-->
      <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, remote: true, data: {confirm: "コメントを削除します"}  %>
    <% end %>

<% end %>