<!--３行目「posts」部分が元インスタンス変数-->

<% posts.each do |post| %>

  <div>
    <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image(100,100) %></p> <!--ユーザーアイコン-->
    <p>ユーザーネーム：<%= post.user.name %></p> <!--名前-->
    <%= post.created_at.strftime('%Y/%m/%d') %> <!--投稿日-->
    <%= link_to post_path(post.id) do %> <!--画像リンク化-->
      <%= image_tag post.get_image %>
    <% end %>
    <p>タイトル：<%= post.title %></p> <!--タイトル-->
    <p>説明：<%= post.introduction %></p> <!--本文-->
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p> <!--コメント数-->
  </div>

<% end %>

