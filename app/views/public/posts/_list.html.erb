<!--３行目「posts」部分が元インスタンス変数-->

<% posts.each do |post| %>

  <div>
    <p><%= image_tag post.user.get_profile_image(100,100) %></p><!--ユーザーアイコン-->
    <p><%= post.user.name %></p> <!--名前-->
    <p><%= post.created_at.strftime('%Y/%m/%d') %></p> <!--投稿日-->
    <p><%= link_to post_path(post.id) do %></p> <!--画像リンク化-->
      <%= image_tag post.get_image %>
    <% end %>
    <p>タイトル：<%= post.title %></p> <!--タイトル-->
    <p>説明：<%= post.introduction %></p> <!--本文-->
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p> <!--コメント数-->

    <% if post.favorited_by?(current_user) %>
    <p>
      <%= link_to post_favorites_path(post), method: :delete do %>
        ♥<%= post.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_favorites_path(post), method: :post do %>
        ♡<%= post.favorites.count %> いいね
      <% end %>
    </p>
<% end %>
  </div>

<% end %>

