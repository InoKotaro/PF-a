<div>
  <%= image_tag @post.user.get_profile_image(100,100) %> <!--ユーザーアイコン-->
  <%= @post.user.name %></p> <!--名前-->
  <%= @post.created_at.strftime('%Y/%m/%d/%H:%M') %> <!--投稿日時-->
  <%= image_tag @post.get_image %> <!--投稿画像表示-->
  <p><%= @post.title %></p> <!--タイトル-->
  <p><%= @post.introduction %></p> <!--本文-->
  <p><%= link_to "#{@post.comments.count} コメント", post_path(current_user) %></p> <!--コメント数-->
  <% if @post.user == current_user %> <!--投稿者とログイン中ユーザーが一致した場合のみ削除ボタン表示-->
    <%= link_to "削除", post_path(@post), method: :delete %>
  <% end %>

  <!--いいね機能部分テンプレート化-->
  <%= render 'favorite', post: @post %>
</div>

<div>
  <!--コメント一覧機能部分テンプレート化-->
  <%= render 'comment_list', post: @post %>
</div>
</div>

<div>
  <!--コメント投稿機能部分テンプレート化-->
  <%= render 'comment_form', post: @post, comment: @comment %>
</div>