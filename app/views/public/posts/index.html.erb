<% @posts.each do |post| %>

  <div>
    <p><%= image_tag post.user.get_profile_image(100,100) %></p><!--ユーザーアイコン-->
    <p><%= post.user.name %></p> <!--名前-->
    <p><%= link_to post_path(post.id) do %></p> <!--画像リンク化-->
      <%= image_tag post.get_image %>
    <% end %>
    <p><%= post.created_at.strftime('%Y/%m/%d') %></p> <!--投稿日-->
    <p>スポット：<%= post.title %></p> <!--タイトル-->
    <p>紹介：<%= post.introduction %></p> <!--紹介文-->
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p> <!--コメント数-->
    <%= render "public/favorites/favorite", post: post %><!--いいね-->
  </div>

<% end %>

<!--ページネーション-->
<%= paginate @posts_page %>