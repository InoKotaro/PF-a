<% if current_user != user%>

  <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, remote: true, class: "followi_free_button" %>
  <% else %>
    <%= link_to "フォロー", user_relationships_path(user.id), method: :post, remote: true, class: "following_button" %>
  <% end %>

<% end %>